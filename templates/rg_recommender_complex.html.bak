    async function initializeRGData() {
        // é¡¯ç¤ºé€²åº¦
        const content = document.getElementById('rgSetupContent');
        content.innerHTML = `
            <div class="text-center py-4">
                <h4>ğŸ”„ æ­£åœ¨åˆå§‹åŒ–...</h4>
                <div class="spinner-border text-primary my-3" role="status">
                    <span class="visually-hidden">è™•ç†ä¸­...</span>
                </div>
                <p>è«‹ç¨å€™ï¼Œé€™å¯èƒ½éœ€è¦å¹¾åˆ†é˜æ™‚é–“</p>
            </div>
        `;
        
        try {
            // è§¸ç™¼æ”¶è—åŒæ­¥å’Œæ¨¡å‹è¨“ç·´
            const response = await fetch('/api/rg-scrape', {
                method: 'POST',
                headers: {
