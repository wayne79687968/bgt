        // è‡ªå‹•é‡æ–°è¼‰å…¥æ¨è–¦
        const url = new URL(window.location);
        url.searchParams.set('algorithm', select.value);
        if (isInGridView) {
            url.searchParams.set('view', 'grid');
        }
        window.location.href = url.toString();
    }

    function refreshRecommendations() {
        window.location.reload();
