# 本地 PostgreSQL 環境配置模板
# 複製此文件為 .env.local 並填入實際配置

# 資料庫連接
DATABASE_URL=postgresql://postgres:password123@localhost:5432/bgg_rag

# Flask 配置
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production

# Email 認證配置 (本地測試用，填入你的實際配置)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=BGG 分析平台

# OpenAI API (如果需要 LLM 功能)
# OPENAI_API_KEY=your-openai-api-key

# 本地測試用 - 較短的 PostgreSQL 等待時間
POSTGRES_STARTUP_WAIT=5

# 時區設置
TZ=Asia/Taipei